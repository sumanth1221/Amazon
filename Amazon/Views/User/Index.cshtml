@model IEnumerable<Amazon.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User";
}

<h2> <font color="Brown">User </font></h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New User</a>
    @*@Html.ActionLink("Create New Ticket", "Create")*@
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                User Role
            </th>
            <th>
                User Phone No.
            </th>
              <th>
                User Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserNme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRoleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhNo)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UserId">Edit</a> 
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserId">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
