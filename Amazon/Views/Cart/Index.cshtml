<html>
@{
    ViewData["Title"] = "Cart";
}
<body>

    <h2> <font color="Brown">Shopping Cart </font></h2>
    <table class="table" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a class="btn btn-danger" asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.ProdId">Delete</a></td>
                <td>@item.Product.ProdId</td>
                <td>@item.Product.ProdNme</td>
                <td>
                    @if (item.Product.ProdImg != null)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Product.ProdImg))" style=" max-height:100px; max-width:100px" />
                    }
                </td>
                <td>@item.Product.ProdPrce$</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.ProdPrce * item.Quantity)$</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6"> <strong> <font color="Brown">Total: </font></strong></td>
            <td>
                @ViewBag.total$
            </td>
        </tr>
    </table>
    <br>
    <a class="btn btn-primary" asp-controller="Items" asp-action="index">Continue Shopping</a>

</body>
</html>