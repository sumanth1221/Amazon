@model IEnumerable<Amazon.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Product";
}
<h2><font color="Brown">Products </font></></h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Add New Product</a>
    @*@Html.ActionLink("Create New Ticket", "Create")*@
</p>


<table class="table" border="1">
    <thead>
        <tr>
            <th>
                Department Name
            </th>
            <th>
               Category Name
            </th>
            <th>
                Product Name 
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
              Avail. Quantity
            </th>
             <th>
               Image
            </th>
            <th>
                Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CtgyNme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdNme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdPrce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdQnty)
            </td>
            <td>
                @if (item.ProdImg != null)
            {
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ProdImg))" style=" max-height:100px; max-width:100px"/>
            }
                 
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProdId">Edit</a> 
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProdId">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
