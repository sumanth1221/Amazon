@model Amazon.Models.AmzProduct

@{
    ViewData["Title"] = "Edit";
}

<h2> <font color="Brown">Update Product </font></h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdId" />
            <input type="hidden" asp-for="ProdImg" />
            <input type="hidden" asp-for="CtgyId" />
            <div class="form-group">
                <label> Name</label>
                <input asp-for="ProdNme" class="form-control" />
                <span asp-validation-for="ProdNme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Description</label>
                <input asp-for="ProdDesc" class="form-control" />
                <span asp-validation-for="ProdDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Quantity </label>
                <input asp-for="ProdQnty" class="form-control" />
                <span asp-validation-for="ProdQnty" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="ActInd" class="control-label"></label>
                <input asp-for="ActInd" class="form-control" />
                <span asp-validation-for="ActInd" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label>Price</label>
                <input asp-for="ProdPrce" class="form-control" />
                <span asp-validation-for="ProdPrce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
